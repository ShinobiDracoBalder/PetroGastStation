@model IEnumerable<PetroGastStation.Web.Models.StationGasViewModel>
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css" />

<p>
    @*<a asp-action="Upload" class="btn btn-outline-primary">Cargar Reporte ...(Upload)!</a>*@
</p>
<div class="row row-cols-1 row-cols-md-4 g-4 mt-1">
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Petro Figues</h3>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive-md">
                             <table class="table table-hover table-responsive table-striped " id="MyTable" style="width:100%">
                            <caption> Lista de Dashboard </caption>
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MainPetro)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Permiso)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecioRegular)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecioPremium)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecioDiesel)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.Estado)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.Municipio)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ToList().OrderBy(g => g.MainPetro))
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MainPetro)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Permiso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecioRegular)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecioPremium)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecioDiesel)
                                        </td>
                                       @* <td>
                                            @Html.DisplayFor(modelItem => item.Estado)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Municipio)
                                        </td>
                                        <td>
                                            <a asp-action="PetroFiguesDetails" asp-route-id="@item.GasEstacion_Id" class="btn btn-outline-info">Detalles</a>
                                            <a asp-action="StationPricePie" asp-route-id="@item.GasEstacion_Id" class="btn btn-outline-warning">Gráfica en Linea</a>
                                            <a asp-action="StationPriceRadarChart" asp-route-id="@item.GasEstacion_Id" class="btn btn-outline-danger">Gráfica tipo radar individual </a>
                                            <a asp-action="StationPriceRadarGroupChart" asp-route-id="@item.GasEstacion_Id" class="btn btn-outline-secondary"> Gráfica tipo radar agrupada </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                 <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MainPetro)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Permiso)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecioRegular)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecioPremium)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecioDiesel)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.Estado)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.Municipio)
                                    </th>
                                    <th></th>
                                </tr>
                             </tfoot>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
      <h3>No hay registros con su criterio de búsqueda (Dashboard) </h3>
    }
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>

    <script type="text/javascript">
    $(document).ready(function () {
        $('#MyTable').DataTable({
            responsive: true,
            "order": [[0, "asc"]],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [5,10,25, 50, 100, 200, -1],
                    [5,10,25, 50, 100, 200, "Todos"]
                ]
            });
        });</script>
}
