@model IEnumerable<PetroGastStation.Web.Models.PipeReportViewModel>
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.jqueryui.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css" />


<p>
    <a asp-action="Upload" class="btn btn-outline-primary">Cargar Reporte ...(Upload)!</a>
</p>
<div class="row row-cols-1 row-cols-md-4 g-4 mt-1">
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Reporte de Pipas</h3>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive-xl">
                             <table class="table table-responsive table-striped" id="MyTable"  style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fecha)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NumeroPermiso)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Apelativo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Remision)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Factura)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Combustible)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Litros)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Total)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CostoLitro)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fecha)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumeroPermiso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Apelativo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Remision)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Factura)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Combustible)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Litros)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Total)
                                        </td>
                                       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CostoLitro)
                                        </td>
                                        <td>
                                            @*<a asp-action="Edit" asp-route-id="@item.PipeReportId" class="btn btn-outline-warning">Editar</a>*@
                                            <a asp-action="PipeDetails" asp-route-id="@item.PipeReportId" class="btn btn-outline-info">Detalles</a>
                                            @*<a asp-action="Delete" asp-route-id="@item.PipeReportId" class="btn btn-outline-danger">Borrar</a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                             <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fecha)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NumeroPermiso)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Apelativo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Remision)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Factura)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Combustible)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Litros)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Total)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CostoLitro)
                                    </th>
                                    <th></th>
                                </tr>
                        </tfoot> 
                        </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h3>No hay registros con su criterio de búsqueda</h3>
    }
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.jqueryui.min.js"></script>
     <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
   
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                 responsive: {
            details: {
                display: $.fn.dataTable.Responsive.display.modal( {
                    header: function ( row ) {
                        var data = row.data();
                        return 'Details for '+data[0]+' '+data[1];
                    }
                } ),
                renderer: $.fn.dataTable.Responsive.renderer.tableAll()
            }
            } ,
                scrollY: 500,
                scrollX: true,
                "order": [[0, "desc"]],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [10, 25, 50, 100, 200, -1],
                    [10, 25, 50, 100, 200, "Todos"]
                ]
            });
        });</script>
}
