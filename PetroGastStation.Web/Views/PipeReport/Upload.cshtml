@model CreatePost
@{
    ViewData["Title"] = "Upload";
}

<h1>Upload</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Upload" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.IsResponse)
            {
                if (Model.IsSuccess)
                {
                    <div class="alert alert-success">
                        @Model.Message
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        @Model.Message
                    </div>
                }
            }

            <div class="row mt-2">
                <div class="col-12">
                    <label class="col-form-label">Select File</label>
                    <input asp-for="File" class="form-control" accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Upload File" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

